<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChonTauVeActivity"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Chọn tàu tàu"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/tvChontaudi"
            android:gravity="center"
            android:paddingTop="10sp"
            >
        </TextView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#DCD7D7"
        app:itemTextColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/menu_chon_tau"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:id="@+id/main_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navMenu" />
    <Button
        android:id="@+id/ToThanhToan"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="Tiếp tục"
        android:backgroundTint="@color/purple"
        android:layout_gravity="center"/>

</LinearLayout>